{
  "name": "skyline-devops",
  "displayName": "Skyline DevOps",
  "description": "A Salesforce DevOps Tool",
  "icon": "images/Skyline_logo.png",
  "publisher": "mitchspano",
  "version": "0.0.3",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "skyline.launch",
        "title": "Skyline"
      }
    ],
    "configuration": {
      "title": "Skyline",
      "properties": {
        "skyline.debugMode": {
          "type": "boolean",
          "default": false,
          "description": "Enable debug mode for additional logging and diagnostics"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map && node scripts/prepare-templates.js",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "prepare-templates": "node scripts/prepare-templates.js"
  },
  "devDependencies": {
    "@babel/plugin-syntax-decorators": "^7.25.9",
    "@babel/preset-typescript": "^7.26.0",
    "@lwc/module-resolver": "^8.8.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.95.0",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "@vscode/test-electron": "^2.3.4",
    "babel-loader": "^8.4.1",
    "copy-webpack-plugin": "^12.0.2",
    "eslint": "^8.47.0",
    "glob": "^10.3.3",
    "lwc": "^8.8.0",
    "lwc-webpack-plugin": "^3.1.0",
    "mocha": "^10.2.0",
    "ts-loader": "^9.4.4",
    "typescript": "^5.1.6",
    "webpack": "^5.96.1",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@salesforce-ux/design-system": "^2.25.3",
    "@types/uuid": "^10.0.0",
    "lightning-base-components": "^1.22.1-alpha",
    "uuid": "^11.1.0"
  },
  "keywords": [
    "salesforce",
    "devops",
    "development"
  ]
}
