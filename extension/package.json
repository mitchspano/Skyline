{
  "name": "skyline-devops",
  "displayName": "Skyline DevOps",
  "description": "A Salesforce DevOps Tool",
  "icon": "images/Skyline_logo.png",
  "publisher": "mitchspano",
  "version": "0.0.11",
  "repository": {
    "type": "git",
    "url": "https://github.com/mitchspano/skyline"
  },
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "skyline.launch",
        "title": "Skyline"
      }
    ],
    "configuration": {
      "title": "Skyline",
      "properties": {
        "skyline.debugMode": {
          "type": "boolean",
          "default": false,
          "description": "Enable debug mode for additional logging and diagnostics"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map && node scripts/prepare-templates.js",
    "pretest": "npm run lint",
    "lint": "eslint src --ext ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prepare-templates": "node scripts/prepare-templates.js",
    "format": "prettier --write . --ignore-path .gitignore"
  },
  "devDependencies": {
    "@babel/plugin-syntax-decorators": "^7.25.9",
    "@babel/preset-typescript": "^7.26.0",
    "@lwc/module-resolver": "^8.8.0",
    "@types/jest": "^29.5.0",
    "@types/node": "16.x",
    "@types/vscode": "^1.95.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vscode/test-electron": "^2.3.4",
    "babel-loader": "^8.4.1",
    "copy-webpack-plugin": "^12.0.2",
    "eslint": "^8.47.0",
    "glob": "^10.3.3",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "lwc": "^8.8.0",
    "lwc-webpack-plugin": "^3.1.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.4",
    "typescript": "^5.1.6",
    "webpack": "^5.96.1",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@salesforce-ux/design-system": "^2.25.3",
    "@types/uuid": "^10.0.0",
    "lightning-base-components": "^1.22.1-alpha",
    "uuid": "^11.1.0"
  },
  "keywords": [
    "salesforce",
    "devops",
    "development"
  ]
}
